@model Sys_Meeting.Models.AccountEditModels

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Chgpwd</title>
        <link rel="shortcut icon" href="../../Content/favicon.ico" type="image/x-icon" />
    
        <link href="../../Content/jquery-plugin/themes/metro/easyui.css" rel="stylesheet"
              type="text/css" />
        <link href="../../Content/jquery-plugin/themes/icon.css" rel="stylesheet" type="text/css" />
        <link href="../../Content/jquery-plugin/demo/demo.css" rel="stylesheet" type="text/css" />
        
        <script type="text/javascript" src="~/Scripts/jquery-1.7.1.min.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="../../Content/jquery-plugin/jquery.form.js" type="text/javascript"></script>
        
        <script type="text/javascript">
            $(function() {
                $('#UserId').val($('#UserIdValue').val());
            });
            
        </script>
    </head>
    <body>
        <input type="hidden" value="@ViewData["userid"]" id="UserIdValue"/>
    
        @using (Html.BeginForm("chgpwd", "account", FormMethod.Post, new {id = "form-chgpwd"}))
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>修改用戶密碼</legend>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.UserId)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.UserId, new {@readonly = "readonly"})
                    @Html.ValidationMessageFor(model => model.UserId)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.Password)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.Newpwd)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Newpwd)
                    @Html.ValidationMessageFor(model => model.Newpwd)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ConfirmPassword)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ConfirmPassword)
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
    
                <p>
                    <input type="submit" value="確認" id="btn-confirm"/>
                </p>
            </fieldset>
        }
